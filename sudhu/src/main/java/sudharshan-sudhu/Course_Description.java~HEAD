
public class Course_Description extends CourseTitle
{
	String description;
	String department;
	
	public void getDescription()
	{
		System.out.println("Please enter course description");
		description=sc.nextLine();
		System.out.println("Please enter Course Department");
		department=sc.next();
	}
	
	public void printCourseDetails()
	{
		System.out.println("Title of the course is :"+courseTitle);
		System.out.println("Course Number is :"+courseNumber);
		System.out.println("Description of the Course is :"+description);
		System.out.println("Course Department is :"+department);
	}

}
